{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "esm",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "module": "NodeNext",
    "sourceMap": true,
    "declaration": true,
  },
  "include": [
    "lib/index.ts",
    "lib/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "node_modules/@comunica/core/lib/Mediator.ts"
  ]
}
